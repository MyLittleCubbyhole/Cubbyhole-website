<section id="user-management-container">
	<section id="box-white">
		<section id="user-management-filter-box">
			<section id="user-management-filter-box" class="form">
				<section class="input-search col-xs-12 col-sm-8 ">
					<label class="input col-xs-11">
						<input type="text" placeholder="SEARCH" ng-model="search">
					</label>
				</section>
				<section class="filter-box col-xs-12 col-sm-4">
					<span ng-click="PlanAdministration.createPlan()">CREATE</span>
				</section>
			</section>	
		</section>		
	</section>
	<section id="user-management-listing" scroll-bar>
		<section id="user-management-listing-content">
			
			<section class="plan-container-account">

				<section class="plan-container-body">
					<section class="plan-container">
						<a ng-repeat="(index, plan) in PlanAdministration.plans | filter: search" class="animated" ng-show="!PlanAdministration.selectedPlan.id || (PlanAdministration.selectedPlan.id && plan.selected)" ng-class="{fadeIn: !PlanAdministration.selectedPlan.id, bounceOutRight: (PlanAdministration.selectedPlan.id && !plan.selected), bounceInLeft: (PlanAdministration.selectedPlan.id && plan.selected), 'plan-selected': (PlanAdministration.selectedPlan.id && plan.selected)}" ng-click="PlanAdministration.selectPlan(plan)">
							<section class="plan-header google-font big-font">
								<section class="plan-price">
									<span ng-if="plan.price != 0">${{plan.price}}</span>
									<span ng-if="plan.price == 0">FREE</span>
								</section>
								<section class="plan-border-left"></section>
								<section class="plan-border-right"></section>
							</section>
							<section class="plan-body google-font">
								<article class="plan-name">{{plan.name}}</article>
								<article class="plan-storage">{{plan.storage | ItemSizeFilter}} storage</article>
							</section>
							<section class="plan-footer google-font">
								<article class="soft-button" ng-click="PlanAdministration.delete($event, index)">DELETE</article>
							</section>
						</a>
						<section class="plan-details animated" ng-show="PlanAdministration.selectedPlan.id" ng-class="{bounceInDown: PlanAdministration.selectedPlan.id}">
							<i class="close-icon icon-cross" ng-click="PlanAdministration.unselect()"></i>
							
							<article class="user-picture">
								<article class="border-circle-blue" form-file-upload=".image-plan-target" form-file-model="PlanAdministration.selectedPlan.image" form-file-name="photo" form-file-active-upload>
									<article class="camera-icon"><i class="icon-camera"></i></article>
									<article class="img-circle image-plan-target">
										<i class="icon-profile-male form-file-hide"></i>
									</article>
								</article>
							</article>

							<article class="edit-account-form">
								<form name="form" class="form" ng-submit="PlanAdministration.save(form.$valid)" novalidate>
									<fieldset>
										<section>
											<article class="row">
												<label for="input-name-plans-administration" class="label col col-xs-3 col-sm-4">Name</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.name" id="input-name-plans-administration" type="text" name="name" class="form-control" />
														<i class="icon-append icon-user"></i>
													</label>
												</article>
											</article>
										</section>
										<section>
											<article class="row">
												<label for="input-price-plans-administration" class="label col col-xs-3 col-sm-4">Price</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.price" id="input-price-plans-administration" type="text" name="price" class="form-control" />
														<i class="icon-append icon-credit-card"></i>
													</label>
												</article>
											</article>
										</section>
										<section>
											<article class="row">
												<label for="input-description-plans-administration" class="label col col-xs-3 col-sm-4">Description</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.description" id="input-description-plans-administration" type="text" name="description" class="form-control" />
														<i class="icon-append icon-newspaper"></i>
													</label>
												</article>
											</article>
										</section>
										<section>
											<article class="row">
												<label for="input-storage-plans-administration" class="label col col-xs-3 col-sm-4">Storage</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.storage" id="input-storage-plans-administration" type="text" name="storage" class="form-control" />
														<i class="icon-append icon-archive"></i>
													</label>
												</article>
											</article>
										</section>
										<section>
											<article class="row">
												<label for="input-uploadbandwidth-plans-administration" class="label col col-xs-3 col-sm-4">Upload bandwidth</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.uploadBandwidth" id="input-uploadbandwidth-plans-administration" type="text" name="uploadbandwidth" class="form-control" />
														<i class="icon-append icon-cloud-upload"></i>
													</label>
												</article>
											</article>
										</section>
										<section>
											<article class="row">
												<label for="input-downloadbandwidth-plans-administration" class="label col col-xs-3 col-sm-4">Download bandwidth</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.downloadBandwidth" id="input-downloadbandwidth-plans-administration" type="text" name="downloadBandwidth" class="form-control" />
														<i class="icon-append icon-cloud-download"></i>
													</label>
												</article>
											</article>
										</section>
										<section>
											<article class="row">
												<label for="input-quota-plans-administration" class="label col col-xs-3 col-sm-4">Quota</label>
												<article class="col col-xs-9 col-sm-8">
													<label class="input state-disabled">
														<input ng-model="PlanAdministration.selectedPlan.quota" id="input-quota-plans-administration" type="text" name="quota" class="form-control" />
														<i class="icon-append icon-calendar"></i>
													</label>
												</article>
											</article>
										</section>
									</fieldset>
									<section class="buttons">
										<button class="button green register google-font pull-right" type="submit">{{PlanAdministration.selectedPlan.new ? 'CREATE' : 'UPDATE'}}</button>
									</section>
								</form>
							</article>


						</section>
					</section>
				</section>

			</section>
		</section>
	</section>
</section>