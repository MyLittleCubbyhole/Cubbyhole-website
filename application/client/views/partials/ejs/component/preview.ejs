<section class="preview-content">
    <article class="preview-element" ng-if="FileManager.selectedItems[0].category =='image'">
        <img ng-src="{{Preview.getResourceUrl()}}"/>
    </article>
    <article class="preview-element" ng-if="FileManager.selectedItems[0].category =='video'">
        <video ng-src="{{Preview.getResourceUrl()}}" controls/>
    </article>
    <article class="preview-element" ng-if="FileManager.selectedItems[0].category =='audio'">
        <audio ng-src="{{Preview.getResourceUrl()}}" controls/>
    </article>
    <article class="preview-element code" ng-if="FileManager.selectedItems[0].category =='text'">
        <pre scroll-bar><code highlight="Preview.resourceContent"></code></pre>
    </article>
    <article class="preview-element" ng-if="FileManager.selectedItems[0].category =='pdf'">
        <iframe ng-src="{{Preview.getResourceUrl()}}"></iframe>
    </article>
</section>