doctype html
html
	head
		block page_definition
			title title
			meta(name="description" content="description")
			meta(name="author" content="author")

		meta(http-equiv="Content-Type" content="text/html; charset=UTF8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
		meta(http-equiv="Pragma" content="no-store")
		meta(http-equiv="Cache-Control" content="no-store")
		meta(http-equiv="Lang" content="en")
		meta(name="copyright" content="All Rights Reserved - Pillow Team")
		//- if partials used
		//- meta(name="fragment" content="!")

		block styles
			//-<!-- build:css /styles/core.css -->
			link(rel="stylesheet", href="/styles/core.css")
			//-<!-- endbuild -->

	body#ng-app(ng-app='Home')
		block body
		block javascripts-common
			//-<!-- build:js /javascripts/common.js -->
			script(src="/javascripts/libraries/polyfills/promise.js")
			script(src="/javascripts/libraries/angular/angular.js")
			script(src="/javascripts/modules/expose/core.js")
			script(src="/javascripts/modules/home/core.js")
			script(src="/javascripts/modules/home/controllers/home.js")
			script(src="/javascripts/modules/_templates/core.js")
			//-<!-- endbuild -->

		block javascripts
			script(src='/expose/localization/config' type="application/javascript")
			//-<!-- build:js /javascripts/i18next.js -->
			script(src="/javascripts/libraries/i18next/ng-i18next.js")
			script(src="/javascripts/libraries/i18next/ng-i18next-config.js")
			//-<!-- endbuild -->
			script(src="/i18next/i18next.js" type="text/javascript")